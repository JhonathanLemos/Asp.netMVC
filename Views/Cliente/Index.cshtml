@model IEnumerable<Teste_MVC.Models.Clientes.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="d-flex justify-content-between">
    <h1>Clientes</h1>

    <a class="buttonApplicationCreate" asp-action="Create" asp-controller="Cliente">Novo Cliente</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cnpj)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Idade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cnpj)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
    @if (Model.Count() == 0)
    {

        <tfoot>
            <tr>
                <td colspan="5" style="text-align:center">
                    Nenhum cliente encontrado
                </td>
            </tr>
        </tfoot>
    }

</table>
