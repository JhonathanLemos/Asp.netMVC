@model Teste_MVC.Models.Clientes.Cliente

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center">
    <div class="row">
        <div class="col-md-12">

            <div>
                <h3>Voce realmente deseja deletar esse cliente?</h3>
                <hr />
                <dl class="row" style="width:100%">
                    <dt class="col-sm-8">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-4">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class="col-sm-8">
                        @Html.DisplayNameFor(model => model.Idade)
                    </dt>
                    <dd class="col-sm-4">
                        @Html.DisplayFor(model => model.Idade)
                    </dd>
                    <dt class="col-sm-8">
                        @Html.DisplayNameFor(model => model.Telefone)
                    </dt>
                    <dd class="col-sm-4">
                        @Html.DisplayFor(model => model.Telefone)
                    </dd>
                    <dt class="col-sm-8">
                        @Html.DisplayNameFor(model => model.Cnpj)
                    </dt>
                    <dd class="col-sm-4">
                        @Html.DisplayFor(model => model.Cnpj)
                    </dd>
                </dl>

                <div class="d-flex justify-content-end">

                    <form asp-action="Delete">
                        <input type="button" value="Voltar" onclick="window.location.href = '@Url.Action("Index", "Cliente")';" class="btn btn-primary" />
                        <input type="submit" asp-route-id="@Model.Id" value="Deletar" class="btn btn-danger" />
                    </form>
                </div>

            </div>
        </div>
    </div>

</div>
